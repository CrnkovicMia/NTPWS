<?php
$danTjedna = date("w");
$sat = date("H");

if($danTjedna == 0){
    echo "Nedjelja je, ducan ne radi";
}
else if($danTjedna == 6 && $sat >= 9 && $sat <= 14){
    echo "Otvoreno";

}
else if($sat >=8 && $sat <= 20){
    echo "Otvoreno";
   
}else{
    echo "Zatvoreno";
}
 ?>
